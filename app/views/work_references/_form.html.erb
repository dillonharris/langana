<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@worker, @work_reference], url: worker_work_references_path, method: :post do |f| %>
      <%= render "shared/errors", object: @work_reference %>
      <fieldset>
        <ol>
          <li>
            <%= f.label :work, "What work did #{@worker.first_name} do for you?" %>
            <%= f.text_field :work, size: 40, autofocus: true %>
          </li>

          <li>
            <%= f.label :comment %>
            <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
          </li>
        </ol>
        <p>
          <%= f.submit 'Save Reference', :class => 'btn btn-primary' %>
          <%= link_to "Cancel", @worker %>
        </p>
      </fieldset>
    <% end %>
  </div>
</div>
