<%= form_for [@user, @work_reference], url: user_work_references_path, method: :post do |f| %>
  <%= render "shared/errors", object: @work_reference %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :work, "What work did #{@user.first_name} do for you?" %>
        <%= f.text_field :work, size: 40, autofocus: true %>
      </li>

      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Save Reference', :class => 'button right' %>
      <%= link_to "Cancel", @user, class: 'button' %>
    </p>
  </fieldset>
<% end %>