<%= form_for [@user, @review] do |f| %>
  <%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :work, "What work did #{@user.name} do for you?" %>
        <%= f.text_field :work, size: 40, autofocus: true %>
      </li>

      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Post Reference' %> 
      <%= link_to "Cancel", @user, class: 'button' %>
    </p>
  </fieldset>
<% end %>